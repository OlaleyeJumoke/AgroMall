<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="5dp"
    card:cardElevation="5dp"
    card:cardBackgroundColor="#ffffff"
    card:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/farmer_picture"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:padding="8dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/farm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textAlignment="viewStart"
                android:fontFamily="@font/lato_bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/farmer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/lato_regular"
                android:ellipsize="end"
                android:textAlignment="viewStart"
                android:layout_below="@id/farm_name"
                android:maxLines="1"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/farm_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAlignment="viewStart"
                android:layout_marginTop="16dp"
                android:layout_below="@id/farmer_name"
                android:fontFamily="@font/lato_regular"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
